<h1>{{ title3 }}</h1>

<table> <!--테이블 형식으로 보여줍니다.-->
    <tr>
        <td>Airplane_id</td>
        <td>Total_number_of_seats</td>
        <td>Airplane_type</td>
    </tr>
    {{#each airplane_res}}  <!--데이터가 있을 때 마다 행 단위로 실행되는 것입니다.-->
        <form method="post"> <!--즉 수정 버튼을 눌렀을 때 값을 넘겨줍니다.-->
            <tr>
                <input type= "hidden" name="airplane_id" value="{{Airplane_id}}">
                <td>{{Airplane_id}}</td> <!--괄호 안의 값은 기존의 예시로 안에 보여지는 값입니다.-->
                <td><input type="text" name="total_number_of_seats" placeholder={{Total_number_of_seats}}></td>
                <td>{{Airplane_type}}</td> 
                <td><input type="submit" value="수정" formaction="/update"></td>
                <!--formaction: form 내부에서 사용하는 action 입니다.-->
                <!--method는 post이므로, update.js에서 router.post함수를 사용합니다.-->
                <!--formaction에 의해 update.js에서 /airport의 router.post, router.get으로 변함-->
            </tr>
        </form>
    {{/each}}
</table>