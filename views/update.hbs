 <form method="post">
    <button 
        style="margin-left: 10px;" 
        name='change_to_delete' 
        type="submit" 
        value="delete page"                              
        formaction="/update"> <!--어느 .js 파일로 보낼 것인지-->
        delete page로 이동
    </button>
    <button 
        style="margin-left: 10px;" 
        name='change_to_insert' 
        type="submit" 
        value="insert page"                              
        formaction="/update"> <!--어느 .js 파일로 보낼 것인지-->
        insert page로 이동
    </button>
</form>
<h1>{{ title1 }}</h1>

<table> <!--데이터를 테이블 형식으로 보여줍니다.-->
    <tr> <!--행의 데이터-->
        <td>Airport_code</td> <!--열의 데이터-->
        <td>Name</td>
        <td>City</td>
        <td>State</td>
    </tr>
    {{#each airport_res}}<!--데이터가 있을 때 마다 행 단위로 실행되는 것입니다.-->
        <form method="post" action='/update'><!--즉 수정 버튼을 눌렀을 때 update.js 의 get '/update' 이쪽'값을 넘겨줍니다.-->           
            <tr> <!--input tag를 사용하여 입력 가능한 형태로 변경-->
                <input type= "hidden" name="airport_code" value="{{Airport_code}}">
                <td>{{Airport_code}}</td> <!--값을 update할 때 Salary field의 값만 바꾸는 것이므로 아래와 같이 합니다.-->
                <td><input type="text" name="name" placeholder={{Name}}></td> 
                <td>{{City}}</td>
                <td>{{State}}</td>
                <td><input type="submit" value="수정"></td> <!--수정 이름을 갖는 submit 버튼을 생성합니다.-->
            </tr>
        </form>
        {{/each}}   <!--이 곳 까지 반복 실행됩니다.-->
</table>

